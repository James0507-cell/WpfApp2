<Window x:Class="WpfApp2.MedicineRequestConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicine Request Confirmation"
        Height="400" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent" Loaded="Window_Loaded">

    <Border Background="White" CornerRadius="15" BorderBrush="#DDD" BorderThickness="1" Padding="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <DockPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Medicine Request Confirmation"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#2C3E50"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"/>
                <Button Content="✕"
                        Width="30" Height="30"
                        Background="Transparent"
                        Foreground="#888"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right"
                        Click="Close_Click"/>
            </DockPanel>

            <!-- Medicine Info -->
            <StackPanel Grid.Row="1" Margin="10,0,0,10">
                <TextBlock x:Name="lblMedicineName" Text="Biogesic" FontWeight="SemiBold" FontSize="14"/>
                <TextBlock x:Name="lblGenericName" Text="Paracetamol" Foreground="#666"/>
                <TextBlock x:Name="lblDose" Text="500 mg" Foreground="#666"/>
            </StackPanel>

            <!-- Quantity -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0,0,10">
                <Label Content="Quantity:" Width="70" VerticalAlignment="Center"/>
                <Border CornerRadius="6" BorderBrush="#CCC" BorderThickness="1" Background="White">
                    <TextBox x:Name="txtQuantity"
                             Width="100"
                             Height="30"
                             Padding="5"
                             BorderThickness="0"
                             VerticalContentAlignment="Center" Background="{x:Null}"/>
                </Border>
            </StackPanel>

            <!-- Notes -->
            <StackPanel Grid.Row="3" Orientation="Vertical" Margin="10,0,0,10">
                <Label Content="Purpose / Notes:"/>
                <Border CornerRadius="6" BorderBrush="#CCC" BorderThickness="1" Background="White">
                    <TextBox x:Name="txtPurpose"
                             Width="360"
                             Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             BorderThickness="0"
                             Padding="6"
                             VerticalScrollBarVisibility="Auto"/>
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                <Button x:Name="btnConfirmRequest"
                        Content="Confirm"
                        Width="150" Height="40"
                        Background="#2ECC71"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnConfirmRequest_Click"
                        Margin="5,0,5,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Cancel"
        Width="150" Height="40"
        Background="#E74C3C"
        Foreground="White"
        FontWeight="SemiBold"
        BorderThickness="0"
        Cursor="Hand"
        Click="Close_Click"
        Margin="5,0,5,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>
