<Window x:Class="WpfApp2.AddNewMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Add New Medicine" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Medicine Name:" Grid.Row="0" Grid.Column="0" Margin="0,5,10,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtMedicineName" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <Label Content="Generic Name:" Grid.Row="1" Grid.Column="0" Margin="0,5,10,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtGenericName" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <Label Content="Milligrams (mg):" Grid.Row="2" Grid.Column="0" Margin="0,5,10,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtMilligrams" Grid.Row="2" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <Label Content="Description:" Grid.Row="3" Grid.Column="0" Margin="0,5,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtDescription" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5" 
                 Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Padding="5"/>

        <Label Content="Inventory Amount:" Grid.Row="4" Grid.Column="0" Margin="0,5,10,0" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtInventoryAmount" Grid.Row="4" Grid.Column="1" Margin="0,5,0,5" Padding="5"/>

        <Rectangle Grid.Row="5" Grid.ColumnSpan="2" Height="1" Fill="LightGray" Margin="0,15,0,15"/>

        <Button Content="Add Medicine" Grid.Row="7" Grid.ColumnSpan="2" 
                HorizontalAlignment="Right" Padding="15,5" FontSize="14" FontWeight="Bold"
                x:Name="BtnAddMedicine" Click="BtnAddMedicine_Click_1"/>
    </Grid>
</Window>