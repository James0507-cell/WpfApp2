                                            <TextBlock Text="Purpose:" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                                            <TextBlock Text="Allergies:" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
