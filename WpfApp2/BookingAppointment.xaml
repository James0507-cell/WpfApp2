                                            <Button x:Name="btn10" Content="3:30 PM" Tag="3:30 PM" Grid.Column="1" Grid.Row="4" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button x:Name="btn11" Content="4:00 PM" Tag="4:00 PM" Grid.Column="0" Grid.Row="5" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button x:Name="btn12" Content="4:30 PM" Tag="4:30 PM" Grid.Column="1" Grid.Row="5" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button x:Name="btn13" Content="5:00 PM" Tag="5:00 PM" Grid.Column="0" Grid.Row="6" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <Button Content="Next →" 
                        Style="{StaticResource SelectedAppointmentButtonStyle}" 
                        Width="150" Height="40"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                        Margin="0,0,10,10"
                        Click="NextButton_Click"/>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>




                <TabItem x:Name="PatientDetail" Margin="-3,-1,3,1" Header="2" Width="30" Height="30" Padding="0,0,0,0" FontSize="12.2" IsEnabled="False">
                    <TabItem.Background>
                        <ImageBrush ImageSource="/Screenshot 2025-09-14 224135.png" Stretch="UniformToFill"/>
                    </TabItem.Background>
                    <Grid Background="#FFF9F9F9" Height="503">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="96"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="1" BorderBrush="#FFABABAB" BorderThickness="1" Margin="26,0,26,0" CornerRadius="15,15,15,15" VerticalAlignment="Center" Height="426">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,9,0,0">
                                <StackPanel Margin="20">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Patient Information" FontSize="18" FontWeight="SemiBold" Foreground="#FF00104D"/>
