<Window
        x:Class="WpfApp2.BookingAppointment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    mc:Ignorable="d"
    Title="BookingAppointment" Height="744" Width="852" Background="{x:Null}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <!-- <<< Add your styles here so they are accessible anywhere in this window >>> -->
    <Window.Resources>
        <Style x:Key="AppointmentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#1C3E61"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6E6E6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SelectedAppointmentButtonStyle" TargetType="Button" BasedOn="{StaticResource AppointmentButtonStyle}">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#E53935"/>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" CornerRadius="20,20,20,20" Background="#FFF9F9F9">
        <Grid Margin="1,-1,-1,1">
            <Grid.RowDefinitions>
                <RowDefinition Height="89*"/>
                <RowDefinition Height="637*"/>
            </Grid.RowDefinitions>
            <TabControl x:Name="MyTabBooking" Grid.Row="1" Margin="133,33,133,63" BorderBrush="{x:Null}" Background="#FFF9F9F9">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    Padding="0">
                                        <ContentPresenter ContentSource="Header"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                    </Style>

                    <Style x:Key="AppointmentButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="Foreground" Value="#1C3E61"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10,15"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6E6E6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="SelectedAppointmentButtonStyle" TargetType="Button" BasedOn="{StaticResource AppointmentButtonStyle}">
                        <Setter Property="Background" Value="#E53935"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#E53935"/>
                    </Style>

                    <Style x:Key="BookedAppointmentStyle" TargetType="Button">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="Foreground" Value="#A0A0A0"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10,15"/>
                        <Setter Property="IsEnabled" Value="False"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ContentPresenter/>
                                            <TextBlock Text="Booked" FontSize="11" Foreground="#A0A0A0" Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="BookingDate" Margin="178,-3,-197,-14">
                    <TabItem.Background>
                        <ImageBrush ImageSource="/Screenshot 2025-09-14 224107.png"/>
                    </TabItem.Background>
                    <Grid>
                        <Border BorderBrush="#FFAFAFAF" BorderThickness="1" Margin="26,34,26,34" CornerRadius="10">
                            <Grid Margin="0,-1,0,-1">
                                <!-- Header -->
                                <Label Content="Select Preferred Date And Time" 
                       HorizontalAlignment="Left" Margin="64,7,0,0" VerticalAlignment="Top" 
                       FontSize="18" FontWeight="DemiBold" Foreground="#FF00104D"/>
                                <Label Content="Choose date and time that works best for you" 
                       HorizontalAlignment="Left" Margin="65,32,0,0" VerticalAlignment="Top" 
                       Foreground="#FFAFAFAF"/>
                                <Image HorizontalAlignment="Left" Height="40" Margin="10,15,0,0" VerticalAlignment="Top" Width="46" 
                       Source="/Screenshot 2025-09-14 231802.png"/>

                                <!-- Clinic Hours Info -->
                                <Border BorderThickness="1" Margin="24,294,24,66" CornerRadius="7" BorderBrush="#FF7BA9FF" Background="#FFB3D6FF">
                                    <Grid>
                                        <Label Content="Clinic Hours" HorizontalAlignment="Left" Margin="35,-2,0,0" VerticalAlignment="Top" FontWeight="DemiBold"/>
                                        <Label Content="Monday to Friday: (00 AM - 6:00 PM)&#xA;Closed on weekends and holidays" 
                               HorizontalAlignment="Left" Margin="35,18,0,0" VerticalAlignment="Top" FontSize="10" Foreground="#FF006BFF"/>
                                        <Image HorizontalAlignment="Left" Height="19" Margin="6,4,0,0" VerticalAlignment="Top" Width="21" 
                               Source="/Screenshot 2025-09-14 233303.png"/>
                                    </Grid>
                                </Border>

                                <!-- Calendar and Time Selection -->
                                <Border BorderBrush="#FFABAAAA" BorderThickness="1" Margin="33,60,37,80" CornerRadius="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="205*"/>
                                            <ColumnDefinition Width="123.5*"/>
                                            <ColumnDefinition Width="123.5*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Calendar -->
                                        <Calendar x:Name="cldDate" HorizontalAlignment="Center" Margin="0,9,0,0" VerticalAlignment="Top" Grid.RowSpan="6" Grid.Row="1"/>

                                        <!-- Time buttons -->
                                        <Grid x:Name="TimeSelectionGrid" Grid.Column="1" Grid.RowSpan="7" Grid.ColumnSpan="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Button Content="9:00 AM" Tag="9:00 AM" Grid.Column="0" Grid.Row="0" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="9:30 AM" Tag="9:30 AM" Grid.Column="1" Grid.Row="0" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="10:00 AM" Tag="10:00 AM" Grid.Column="0" Grid.Row="1" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="10:30 AM" Tag="10:30 AM" Grid.Column="1" Grid.Row="1" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="1:00 PM" Tag="1:00 PM" Grid.Column="0" Grid.Row="2" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="1:30 PM" Tag="1:30 PM" Grid.Column="1" Grid.Row="2" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="2:00 PM" Tag="2:00 PM" Grid.Column="0" Grid.Row="3" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="2:30 PM" Tag="2:30 PM" Grid.Column="1" Grid.Row="3" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="3:00 PM" Tag="3:00 PM" Grid.Column="0" Grid.Row="4" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="3:30 PM" Tag="3:30 PM" Grid.Column="1" Grid.Row="4" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="4:00 PM" Tag="4:00 PM" Grid.Column="0" Grid.Row="5" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="4:30 PM" Tag="4:30 PM" Grid.Column="1" Grid.Row="5" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="5:00 PM" Tag="5:00 PM" Grid.Column="0" Grid.Row="6" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <!-- Next Button -->
                                <Button Content="Next →" 
                        Style="{StaticResource SelectedAppointmentButtonStyle}" 
                        Width="150" Height="40"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                        Margin="0,0,10,10"
                        Click="NextButton_Click"/>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>




                <TabItem x:Name="PatientDetail" Margin="220,-3,-239,-15">
                    <TabItem.Background>
                        <ImageBrush ImageSource="/Screenshot 2025-09-14 224135.png" Stretch="UniformToFill"/>
                    </TabItem.Background>
                    <Grid Background="#FFF9F9F9" Height="486">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="1" BorderBrush="#FFABABAB" BorderThickness="1" Margin="26,0,26,0" CornerRadius="15,15,15,15" VerticalAlignment="Center" Height="444">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="20">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Patient Information" FontSize="18" FontWeight="SemiBold" Foreground="#FF00104D"/>
                                            <TextBlock Text="Please provide your details and reason for visit" Foreground="#FFAFAFAF"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Grid Margin="0,10,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Personal Information" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                    <Label Content="First Name *" FontWeight="Normal" Foreground="#FF666666"/>
                                                    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                        <TextBox x:Name="txtFirstName" Padding="5" Margin="0" BorderThickness="0" Text="{Binding FirstName}" TextChanged="txtFirstName_TextChanged"/>
                                                    </Border>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                    <Label Content="Last Name *" FontWeight="Normal" Foreground="#FF666666"/>
                                                    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                        <TextBox x:Name="txtLastName" Padding="5" Margin="0" BorderThickness="0" Text="{Binding LastName}" TextChanged="txtLastName_TextChanged"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                            <Label Content="Student ID *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtStudentID" Padding="5" Margin="0" BorderThickness="0" Text="{Binding StudentID}" TextChanged="txtStudentID_TextChanged"/>
                                            </Border>
                                            <Label Content="Email Address *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtEmail" Padding="5" Margin="0" BorderThickness="0" Text="{Binding EmailAddress}" TextChanged="txtEmail_TextChanged"/>
                                            </Border>
                                            <Label Content="Phone Number *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                <TextBox x:Name="txtPhoneNumber" Padding="5" Margin="0" BorderThickness="0" Text="{Binding PhoneNumber}" TextChanged="txtPhoneNumber_TextChanged"/>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="Medical Information" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                            <Label Content="Purpose of Visit *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <ComboBox x:Name="cmbPurpose" Padding="5" Margin="0" BorderThickness="0" Text="{Binding PurposeOfVisit}" SelectionChanged="cmbPurpose_SelectionChanged">
                                                    <ComboBoxItem Content="Injury"/>
                                                    <ComboBoxItem Content="Check-up"/>
                                                </ComboBox>
                                            </Border>
                                            <Label Content="Current Symptoms/Concerns" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtSymptoms" Padding="5" Margin="0" BorderThickness="0" Text="{Binding CurrentSymptoms}" TextChanged="txtSymptoms_TextChanged"/>
                                            </Border>
                                            <Label Content="Known Allergies" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtAllergies" Padding="5" Margin="0" BorderThickness="0" Text="{Binding KnownAllergies}" TextChanged="txtAllergies_TextChanged"/>
                                            </Border>
                                            <Label Content="Current Medications" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtCurrentMedication" Padding="5" Margin="0" BorderThickness="0" Text="{Binding CurrentMedications}" TextChanged="txtCurrentMedication_TextChanged"/>
                                            </Border>
                                            <Label Content="Previous visits to MMCM clinic?" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                <ComboBox x:Name="cmbPreviousVisit" Padding="5" Margin="0" BorderThickness="0" Text="{Binding PreviousVisits}" SelectionChanged="cmbPreviousVisit_SelectionChanged">
                                                    <ComboBoxItem Content="Yes"/>
                                                    <ComboBoxItem Content="No"/>
                                                </ComboBox>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Margin="0,10,0,20">
                                        <TextBlock Text="Emergency Contact" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                <Label Content="Emergency Contact Name" FontWeight="Normal" Foreground="#FF666666"/>
                                                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                    <TextBox x:Name="txtEmergencyContactName" Padding="5" Margin="0" BorderThickness="0" Text="{Binding EmergencyContactName}" TextChanged="txtEmergencyContactName_TextChanged"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                <Label Content="Emergency Contact Phone" FontWeight="Normal" Foreground="#FF666666"/>
                                                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                    <TextBox x:Name="txtEmergencyContactPhone" Padding="5" Margin="0" BorderThickness="0" Text="{Binding EmergencyContactPhone}" TextChanged="txtEmergencyContactPhone_TextChanged"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <Border Margin="0,10,0,0" BorderBrush="#FFCCCCCC" Background="#FFF5E5C9" Padding="10" CornerRadius="5" BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Privacy Notice: Your information is confidential and will only be used for medical purposes. All data is stored securely in compliance with HIPAA regulations." TextWrapping="Wrap" VerticalAlignment="Center" Foreground="#FF885A21"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <Border Grid.Row="2" Background="#FFF9F9F9" BorderThickness="0,1,0,0" BorderBrush="#FFCCCCCC" Padding="10,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">

                                <Button Content="← Back"
                        Width="100" Height="40"
                        Click="BackButton_Click"/>

                                <Button x:Name="Nexttab2" Content="Next →"
                        Style="{StaticResource SelectedAppointmentButtonStyle}"
                        Width="150" Height="40"
                        Click="NextButton2_Click"/>
                            </StackPanel>
                        </Border>

                    </Grid>
                </TabItem>
                <TabItem x:Name="ConfirmationTab" Margin="266,-3,-284,-15">
                    <TabItem.Background>
                        <ImageBrush Stretch="UniformToFill" ImageSource="/Screenshot 2025-09-14 224118.png"/>
                    </TabItem.Background>

                    <Grid Background="#FFF9F9F9">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="26,20,26,10">
                            <TextBlock Text="Confirm Your Appointment" FontSize="20" FontWeight="SemiBold" Foreground="#FF00104D"/>
                            <TextBlock Text="Review your appointment details before booking" Foreground="#FFAFAFAF"/>
                        </StackPanel>

                        <!-- Appointment Summary -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="26,0,26,20">

                                <!-- Patient and Appointment Details -->
                                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="10" Background="White" Padding="20" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Appointment Summary" FontWeight="SemiBold" FontSize="16" Foreground="#FF5B5B5B" Margin="0,0,0,15"/>

                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Left Column -->
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Patient Name:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmPatientName" Margin="0,0,0,5"/>

                                                <TextBlock Text="Email:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmEmail" Margin="0,0,0,5"/>

                                                <TextBlock Text="Phone Number:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmPhone" Margin="0,0,0,5"/>

                                                <TextBlock Text="Student ID:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmStudentID" Margin="0,0,0,5"/>
                                            </StackPanel>

                                            <!-- Right Column -->
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Text="Purpose of Visit:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmPurpose" Margin="0,0,0,5"/>

                                                <TextBlock Text="Known Allergies:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmAllergies" Margin="0,0,0,5"/>

                                                <TextBlock Text="Current Medications:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmMedication" Margin="0,0,0,5"/>

                                                <TextBlock Text="Previous Visit:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmPreviousVisit" Margin="0,0,0,5"/>

                                                <TextBlock Text="Emergency Contact Name:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmEmergencyName" Margin="0,0,0,2"/>

                                                <TextBlock Text="Emergency Contact Phone:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmEmergencyPhone" Margin="0,0,0,5"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Date and Time -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,5,10,0">
                                                <TextBlock Text="Appointment Date:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmDate" Margin="0,0,0,5"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Margin="10,5,0,0">
                                                <TextBlock Text="Appointment Time:" FontWeight="SemiBold"/>
                                                <TextBlock x:Name="txtConfirmTime" Margin="0,0,0,5"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Clinic Location and Contact Info -->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="10" Background="#FFEDF6FF" Padding="15" Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="Clinic Location" FontWeight="SemiBold" Foreground="#FF006BFF" Margin="0,0,0,5"/>
                                            <TextBlock Text="MMCM Medical Center&#xA;123 Health Street&#xA;Medical District" Foreground="#FF006BFF" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="10" Background="#FFE6F6E6" Padding="15" Margin="10,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="Contact Info" FontWeight="SemiBold" Foreground="#FF2F7C2F" Margin="0,0,0,5"/>
                                            <TextBlock Text="Phone: (555) 123-4567&#xA;Email: appointments@mmcm.edu&#xA;Emergency: (555) 911-HELP" Foreground="#FF2F7C2F" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Before Your Visit Instructions -->
                                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="10" Background="#FFFFF5E8" Padding="15" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Before Your Visit" FontWeight="SemiBold" Foreground="#FFC16C00" Margin="0,0,0,10"/>
                                        <TextBlock TextWrapping="Wrap">
                            • Arrive 15 minutes early for check-in
                            &#x0a;• Bring a valid government-issued ID
                            &#x0a;• Bring any current medications or medical records
                            &#x0a;• Complete health forms if sent via email
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Navigation Buttons -->
                        <Grid Grid.Row="2" Margin="26,0,26,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="← Back to Patient Info" Style="{StaticResource AppointmentButtonStyle}" Background="Transparent" BorderBrush="#FFBBBBBB" Foreground="#FF666666" HorizontalAlignment="Left" Width="200" Click="BackButton_Click"/>
                            <Button Grid.Column="1" Content="✔ Confirm Appointment" Style="{StaticResource SelectedAppointmentButtonStyle}" Background="#E53935" Foreground="White" HorizontalAlignment="Right" Width="200" Click="ConfirmButton_Click"/>
