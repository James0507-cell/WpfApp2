<Window
    x:Class="WpfApp2.BookingAppointment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    mc:Ignorable="d"
    Title="BookingAppointment" Height="744" Width="852" Background="{x:Null}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="AppointmentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#1C3E61"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6E6E6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SelectedAppointmentButtonStyle" TargetType="Button" BasedOn="{StaticResource AppointmentButtonStyle}">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#E53935"/>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" CornerRadius="20,20,20,20" Background="#FFF9F9F9">
        <Grid Margin="1,-1,-1,1">
            <Grid.RowDefinitions>
                <RowDefinition Height="89*"/>
                <RowDefinition Height="637*"/>
            </Grid.RowDefinitions>
            <TabControl x:Name="MyTabBooking" Grid.Row="1" Margin="133,33,133,63" BorderBrush="{x:Null}" Background="#FFF9F9F9">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    Padding="0">
                                        <ContentPresenter ContentSource="Header"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                    </Style>

                    <Style x:Key="AppointmentButtonStyle" TargetType="Button">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="Foreground" Value="#1C3E61"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10,15"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6E6E6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="SelectedAppointmentButtonStyle" TargetType="Button" BasedOn="{StaticResource AppointmentButtonStyle}">
                        <Setter Property="Background" Value="#E53935"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#E53935"/>
                    </Style>

                    <Style x:Key="BookedAppointmentStyle" TargetType="Button">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="Foreground" Value="#A0A0A0"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10,15"/>
                        <Setter Property="IsEnabled" Value="False"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="5">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ContentPresenter/>
                                            <TextBlock Text="Booked" FontSize="11" Foreground="#A0A0A0" Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="BookingDate" Margin="178,-3,-197,-14">
                    <TabItem.Background>
                        <ImageBrush ImageSource="/Screenshot 2025-09-14 224107.png"/>
                    </TabItem.Background>
                    <Grid>
                        <Border BorderBrush="#FFAFAFAF" BorderThickness="1" Margin="26,34,26,34" CornerRadius="10">
                            <Grid Margin="0,-1,0,-1">
                                <Label Content="Select Preferred Date And Time" 
                       HorizontalAlignment="Left" Margin="64,7,0,0" VerticalAlignment="Top" 
                       FontSize="18" FontWeight="DemiBold" Foreground="#FF00104D"/>
                                <Label Content="Choose date and time that works best for you" 
                       HorizontalAlignment="Left" Margin="65,32,0,0" VerticalAlignment="Top" 
                       Foreground="#FFAFAFAF"/>
                                <Image HorizontalAlignment="Left" Height="40" Margin="10,15,0,0" VerticalAlignment="Top" Width="46" 
                       Source="/Screenshot 2025-09-14 231802.png"/>

                                <Border BorderThickness="1" Margin="24,294,24,66" CornerRadius="7" BorderBrush="#FF7BA9FF" Background="#FFB3D6FF">
                                    <Grid>
                                        <Label Content="Clinic Hours" HorizontalAlignment="Left" Margin="35,-2,0,0" VerticalAlignment="Top" FontWeight="DemiBold"/>
                                        <Label Content="Monday to Friday: (00 AM - 6:00 PM)&#xA;Closed on weekends and holidays" 
                                       HorizontalAlignment="Left" Margin="35,18,0,0" VerticalAlignment="Top" FontSize="10" Foreground="#FF006BFF"/>
                                        <Image HorizontalAlignment="Left" Height="19" Margin="6,4,0,0" VerticalAlignment="Top" Width="21" 
                                       Source="/Screenshot 2025-09-14 233303.png"/>
                                    </Grid>
                                </Border>

                                <Border BorderBrush="#FFABAAAA" BorderThickness="1" Margin="33,60,37,142" CornerRadius="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="205*"/>
                                            <ColumnDefinition Width="123.5*"/>
                                            <ColumnDefinition Width="123.5*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Calendar x:Name="cldDate" 
                                                  HorizontalAlignment="Center" 
                                                  Margin="0,9,0,0" 
                                                  VerticalAlignment="Top" 
                                                  Grid.RowSpan="6" 
                                                  Grid.Row="1"
                                                  SelectedDatesChanged="ClsDate_SelectedDatesChanged"/>

                                        <Grid x:Name="TimeSelectionGrid" Grid.Column="1" Grid.RowSpan="7" Grid.ColumnSpan="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Button Content="9:00 AM" Tag="9:00 AM" Grid.Column="0" Grid.Row="0" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="9:30 AM" Tag="9:30 AM" Grid.Column="1" Grid.Row="0" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="10:00 AM" Tag="10:00 AM" Grid.Column="0" Grid.Row="1" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="10:30 AM" Tag="10:30 AM" Grid.Column="1" Grid.Row="1" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="1:00 PM" Tag="1:00 PM" Grid.Column="0" Grid.Row="2" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="1:30 PM" Tag="1:30 PM" Grid.Column="1" Grid.Row="2" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="2:00 PM" Tag="2:00 PM" Grid.Column="0" Grid.Row="3" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="2:30 PM" Tag="2:30 PM" Grid.Column="1" Grid.Row="3" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="3:00 PM" Tag="3:00 PM" Grid.Column="0" Grid.Row="4" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="3:30 PM" Tag="3:30 PM" Grid.Column="1" Grid.Row="4" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="4:00 PM" Tag="4:00 PM" Grid.Column="0" Grid.Row="5" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="4:30 PM" Tag="4:30 PM" Grid.Column="1" Grid.Row="5" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button Content="5:00 PM" Tag="5:00 PM" Grid.Column="0" Grid.Row="6" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <Button Content="Next →" 
                        Style="{StaticResource SelectedAppointmentButtonStyle}" 
                        Width="150" Height="40"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                        Margin="0,0,10,10"
                        Click="NextButton_Click"/>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>




                <TabItem x:Name="PatientDetail" Margin="220,-3,-239,-15">
                    <TabItem.Background>
                        <ImageBrush ImageSource="/Screenshot 2025-09-14 224135.png" Stretch="UniformToFill"/>
                    </TabItem.Background>
                    <Grid Background="#FFF9F9F9" Height="486">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="1" BorderBrush="#FFABABAB" BorderThickness="1" Margin="26,0,26,0" CornerRadius="15,15,15,15" VerticalAlignment="Center" Height="444">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="20">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Patient Information" FontSize="18" FontWeight="SemiBold" Foreground="#FF00104D"/>
                                            <TextBlock Text="Please provide your details and reason for visit" Foreground="#FFAFAFAF"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Grid Margin="0,10,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Personal Information" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                    <Label Content="First Name *" FontWeight="Normal" Foreground="#FF666666"/>
                                                    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                        <TextBox x:Name="txtFirstName" Padding="5" Margin="0" BorderThickness="0" Text="{Binding FirstName}" TextChanged="txtFirstName_TextChanged"/>
                                                    </Border>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                    <Label Content="Last Name *" FontWeight="Normal" Foreground="#FF666666"/>
                                                    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                        <TextBox x:Name="txtLastName" Padding="5" Margin="0" BorderThickness="0" Text="{Binding LastName}" TextChanged="txtLastName_TextChanged"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                            <Label Content="Student ID *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtStudentID" Padding="5" Margin="0" BorderThickness="0" Text="{Binding StudentID}" TextChanged="txtStudentID_TextChanged"/>
                                            </Border>
                                            <Label Content="Email Address *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtEmail" Padding="5" Margin="0" BorderThickness="0" Text="{Binding EmailAddress}" TextChanged="txtEmail_TextChanged"/>
                                            </Border>
                                            <Label Content="Phone Number *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                <TextBox x:Name="txtPhoneNumber" Padding="5" Margin="0" BorderThickness="0" Text="{Binding PhoneNumber}" TextChanged="txtPhoneNumber_TextChanged"/>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="Medical Information" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                            <Label Content="Purpose of Visit *" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <ComboBox x:Name="cmbPurpose" Padding="5" Margin="0" BorderThickness="0" Text="{Binding PurposeOfVisit}" SelectionChanged="cmbPurpose_SelectionChanged">
                                                    <ComboBoxItem Content="Injury"/>
                                                    <ComboBoxItem Content="Check-up"/>
                                                </ComboBox>
                                            </Border>
                                            <Label Content="Current Symptoms/Concerns" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtSymptoms" Padding="5" Margin="0" BorderThickness="0" Text="{Binding CurrentSymptoms}" TextChanged="txtSymptoms_TextChanged"/>
                                            </Border>
                                            <Label Content="Known Allergies" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtAllergies" Padding="5" Margin="0" BorderThickness="0" Text="{Binding KnownAllergies}" TextChanged="txtAllergies_TextChanged"/>
                                            </Border>
                                            <Label Content="Current Medications" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                                <TextBox x:Name="txtCurrentMedication" Padding="5" Margin="0" BorderThickness="0" Text="{Binding CurrentMedications}" TextChanged="txtCurrentMedication_TextChanged"/>
                                            </Border>
                                            <Label Content="Previous visits to MMCM clinic?" FontWeight="Normal" Foreground="#FF666666"/>
                                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                <ComboBox x:Name="cmbPreviousVisit" Padding="5" Margin="0" BorderThickness="0" Text="{Binding PreviousVisits}" SelectionChanged="cmbPreviousVisit_SelectionChanged">
                                                    <ComboBoxItem Content="Yes"/>
                                                    <ComboBoxItem Content="No"/>
                                                </ComboBox>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Margin="0,20,0,0">
                                        <TextBlock Text="Emergency Contact Information" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <Label Content="Emergency Contact Name *" FontWeight="Normal" Foreground="#FF666666"/>
                                                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                    <TextBox x:Name="txtEmergencyContactName" Padding="5" Margin="0" BorderThickness="0" Text="{Binding EmergencyContactName}" TextChanged="txtEmergencyContactName_TextChanged"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                <Label Content="Emergency Contact Phone *" FontWeight="Normal" Foreground="#FF666666"/>
                                                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                                    <TextBox x:Name="txtEmergencyContactPhone" Padding="5" Margin="0" BorderThickness="0" Text="{Binding EmergencyContactPhone}" TextChanged="txtEmergencyContactPhone_TextChanged"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <Grid Grid.Row="2" Margin="26,0,26,0">
                            <Button Content="← Back" 
                                    Style="{StaticResource AppointmentButtonStyle}" 
                                    Width="150" Height="40"
                                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                                    Click="BackButton_Click"/>
                            <Button x:Name="NextButton2" Content="Next →" 
                                    Style="{StaticResource SelectedAppointmentButtonStyle}" 
                                    Width="150" Height="40"
                                    HorizontalAlignment="Right" VerticalAlignment="Center"
                                    Click="NextButton2_Click"/>
                        </Grid>
                    </Grid>
                </TabItem>


                <TabItem x:Name="Confirmation" Header="" Margin="262,-3,-281,-15">
                    <TabItem.Background>
                        <ImageBrush ImageSource="/Screenshot 2025-09-14 224118.png" Stretch="Uniform"/>
                    </TabItem.Background>

                    <!-- Main Grid for layout -->
                    <Grid Background="#FFF9F9F9">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <!-- Scrollable content -->
                            <RowDefinition Height="Auto" />
                            <!-- Confirm button -->
                        </Grid.RowDefinitions>

                        <!-- Content section -->
                        <Border Grid.Row="0" BorderBrush="#FFABABAB" BorderThickness="1" Margin="26,34,26,10" CornerRadius="15">
                            <!-- Make content scrollable -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Confirm Appointment Details" FontSize="18" FontWeight="SemiBold" Foreground="#FF00104D" Margin="0,0,0,10"/>

                                    <Grid Margin="0,10,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Date:" FontWeight="Bold" Grid.Column="0" Margin="0,0,10,5"/>
                                        <TextBlock x:Name="txtConfirmDate" Text="[Date]" Grid.Column="1" Margin="0,0,20,5"/>
                                        <TextBlock Text="Time:" FontWeight="Bold" Grid.Column="2" Margin="0,0,10,5"/>
                                        <TextBlock x:Name="txtConfirmTime" Text="[Time]" Grid.Column="3" Margin="0,0,0,5"/>
                                    </Grid>

                                    <Separator Margin="0,10"/>

                                    <TextBlock Text="Patient Information" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                            <TextBlock Text="Name:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Student ID:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Phone:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Emergency Name:" FontWeight="Bold" Margin="0,5,0,5"/>
                                            <TextBlock Text="Emergency Phone:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock x:Name="txtConfirmPatientName" Text="[Full Name]" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="txtConfirmStudentID" Text="[ID]" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="txtConfirmEmail" Text="[Email]" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="txtConfirmPhone" Text="[Phone]" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="txtConfirmEmergencyName" Text="[E.Name]" Margin="0,5,0,5"/>
                                            <TextBlock x:Name="txtConfirmEmergencyPhone" Text="[E.Phone]" Margin="0,0,0,5"/>
                                        </StackPanel>
                                    </Grid>

                                    <Separator Margin="0,10"/>

                                    <TextBlock Text="Medical Information" FontWeight="SemiBold" FontSize="16" Foreground="#FF00104D" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                            <TextBlock Text="Purpose:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Allergies:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Medication:" FontWeight="Bold" Margin="0,0,0,5"/>
                                            <TextBlock Text="Previous Visit:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock x:Name="txtConfirmPurpose" Text="[Purpose]" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="txtConfirmAllergies" Text="[Allergies]" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="txtConfirmMedication" Text="[Medication]" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="txtConfirmPreviousVisit" Text="[Previous Visit]" Margin="0,0,0,5"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- ✅ Confirm Button outside of the panel -->
                        <Button x:Name="ConfirmButton"
                Grid.Row="1"
                Content="Confirm Appointment"
                Style="{StaticResource SelectedAppointmentButtonStyle}"
                Width="250" Height="40"
                Margin="0,10,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="ConfirmButton_Click"/>
                    </Grid>
                </TabItem>

            </TabControl>
            <Label Content="Book Appointment" HorizontalAlignment="Left" Margin="131,20,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="SemiBold"/>
            <Label Content="Use this form to book an appointment with our clinic." HorizontalAlignment="Left" Margin="133,52,0,0" VerticalAlignment="Top" Foreground="#FF8A8A8A"/>
            <Button Content="Go Back" HorizontalAlignment="Left" Margin="738,39,0,0" VerticalAlignment="Top" Width="67" Click="Button_Click_1" Height="18" Background="{x:Null}" FontWeight="DemiBold" BorderBrush="{x:Null}"/>
            <Button Content="Date &amp; Time" HorizontalAlignment="Left" Margin="176,95,0,0" VerticalAlignment="Top" Click="Button_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF00104D" FontWeight="Bold"/>
            <Button Content="Patient Detail" HorizontalAlignment="Left" Margin="302,95,0,0" VerticalAlignment="Top" Click="Button_Click_2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF00104D" FontWeight="Bold"/>
            <Button Content="Confirmation" HorizontalAlignment="Left" Margin="443,95,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF00104D" FontWeight="Bold"/>
            <Rectangle Fill="#FF00104D" HorizontalAlignment="Left" Height="1" Margin="176,127,0,0" Stroke="Black" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.5,0.5"/>
            <Rectangle Fill="#FF00104D" HorizontalAlignment="Left" Height="1" Margin="303,127,0,0" Stroke="Black" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.5,0.5"/>
