                                            <TextBlock Text="Phone:" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                                            <TextBlock Text="Emergency Name:" FontWeight="Bold" Margin="0,5,0,5" Foreground="Black"/>
                                            <TextBlock Text="Emergency Phone:" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock x:Name="txtConfirmPatientName" Text="[Full Name]" Margin="0,0,0,5" Foreground="Black"/>
                                            <TextBlock x:Name="txtConfirmStudentID" Text="[ID]" Margin="0,0,0,5" Foreground="Black"/>
