                                            <Button x:Name="btn4" Content="10:30 AM" Tag="10:30 AM" Grid.Column="1" Grid.Row="1" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
                                            <Button x:Name="btn5" Content="1:00 PM" Tag="1:00 PM" Grid.Column="0" Grid.Row="2" Click="Appointment_Click" Style="{StaticResource AppointmentButtonStyle}"/>
