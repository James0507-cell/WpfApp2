<Window x:Class="WpfApp2.UpdateAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Appointment"
        Height="335"
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#F5F6FA" Loaded="Window_Loaded">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Appointment Date:"/>
            <DatePicker x:Name="DatePickerDate" Margin="0,5"/>

            <TextBlock Text="Appointment Time:"/>
            <TextBox x:Name="TextBoxTime"
                     Margin="0,5"
                     TextChanged="TextBoxTime_TextChanged"
                     Height="32"
                     Padding="6"
                     Background="White"
                     BorderBrush="#C4C4C4">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Purpose:"/>
            <TextBox x:Name="TextBoxPurpose"
                     Margin="0,5"
                     Height="60"
                     Padding="6"
                     Background="White"
                     BorderBrush="#C4C4C4"
                     AcceptsReturn="True"
                     TextWrapping="Wrap">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Content="Save Changes"
                    Margin="0,10,0,0"
                    Height="38"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#2F3C7E"
                    BorderThickness="0"
                    Click="Button_Save_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#2F3C7E"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4356C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D275B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
