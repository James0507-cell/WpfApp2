<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WpfApp2.MedicineRequest"
        mc:Ignorable="d"
        Title="MedicineRequest" Height="744" Width="852" Background="{x:Null}" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="mah:HeaderedControlHelper.HeaderFontWeight" Value="DemiBold"/>
            <Setter Property="mah:HeaderedControlHelper.HeaderFontSize" Value="13"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="TabBorder"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="15">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="MidnightBlue"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="MidnightBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="TabBorder" Property="Background" Value="#191970"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1" Background="White" CornerRadius="20,20,20,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="89*"/>
                <RowDefinition Height="637*"/>
            </Grid.RowDefinitions>
            <Image HorizontalAlignment="Left" Height="69" Margin="24,0,0,0" VerticalAlignment="Center" Width="92" Source="/Logo-Final_noname_1.png"/>

            <TabControl Grid.Row="1" Margin="72,22,72,36" BorderBrush="{x:Null}">

                <TabItem Header="💊Request Medicine" BorderBrush="{x:Null}" Margin="200,1,-199,-1">
                    <Grid>
                        <Border BorderBrush="#FFD7D7D7" BorderThickness="1" CornerRadius="10,10,10,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80*"/>
                                    <RowDefinition Height="469*"/>
                                </Grid.RowDefinitions>
                                <Border BorderThickness="1" Margin="42,10,46,25" CornerRadius="8,8,8,8" Background="#FFF3F3F3">
                                    <Border BorderThickness="1" Margin="19,0,19,0" Height="32" VerticalAlignment="Center" CornerRadius="5,5,5,5" Background="White">
                                        <Image Margin="5,5,525,5" Source="/Screenshot 2025-10-07 221555.png"/>
                                    </Border>
                                </Border>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,3,0,0">
                                    <UniformGrid x:Name="StackPanelMedicines" Columns="2" HorizontalAlignment="Center" Width="660" />
                                </ScrollViewer>

                                <TextBox x:Name="txtSearch"
         HorizontalAlignment="Left"
         Margin="102,22,0,0"
         TextWrapping="Wrap"
         VerticalAlignment="Top"
         Width="426"
         Height="21"
         FontSize="13"
         Foreground="#FF8F8F8F"
         VerticalContentAlignment="Center"
         Text="Search medicines..."
         BorderThickness="0"
         BorderBrush="Transparent"
         Background="White"
         GotFocus="TextBox_GotFocus"
         LostFocus="txtSearch_LostFocus"
         TextChanged="TextBox_TextChanged"
         FocusVisualStyle="{x:Null}" />
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem Header="📜Request Hintory" BorderBrush="{x:Null}" Margin="262,-1,-263,1">
                    <Grid>
                        <Border BorderBrush="Silver" BorderThickness="1" CornerRadius="10,10,10,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="5*"/>
                                </Grid.RowDefinitions>
                                <Label Content="Request History" HorizontalAlignment="Left" Margin="45,10,0,0" VerticalAlignment="Top" Width="141" FontSize="15" FontWeight="DemiBold" Foreground="#FF001B61"/>
                                <Label Content="View all your previous medicine requests&#x9;" HorizontalAlignment="Left" Margin="45,41,0,0" VerticalAlignment="Top" Foreground="#FF8F8F8F"/>
                                <ScrollViewer x:Name="sdsadada" Grid.Row="1">
                                    <StackPanel x:Name="StackPanelMedicineRequests" Width="570"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
            <Button Content="Go Back" HorizontalAlignment="Left" Margin="736,0,0,0" VerticalAlignment="Center" Click="Button_Click" FontSize="14" Foreground="#FF05005F" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="DemiBold"/>
            <Label Content="Medicine Request" HorizontalAlignment="Left" Margin="118,24,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="DemiBold" Foreground="#FF001751"/>

        </Grid>
    </Border>
</Window>