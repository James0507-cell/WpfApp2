<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WpfApp2.MedicineRequest"
    mc:Ignorable="d"
    Title="MedicineRequest" Height="744" Width="852" Background="{x:Null}" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen"
    MinHeight="400" MinWidth="500">

    <Window.Resources>
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid ClipToBounds="True" SnapsToDevicePixels="True" KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" HorizontalAlignment="Center">
                                <TabPanel x:Name="HeaderPanel" 
                              IsItemsHost="True" 
                              Background="Transparent" 
                              Margin="{TemplateBinding Padding}"
                              KeyboardNavigation.TabIndex="1" 
                              ZIndex="1"/>
                            </Grid>

                            <Border x:Name="ContentPanel" 
                        Grid.Row="1" 
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        KeyboardNavigation.TabIndex="2" 
                        KeyboardNavigation.TabNavigation="Local">
                                <ContentPresenter x:Name="PART_SelectedContentHost" 
                                      ContentSource="SelectedContent" 
                                      Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border x:Name="TabBorder"
                    Background="#F0F0F0"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    CornerRadius="15">
                            <ContentPresenter x:Name="ContentSite"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  ContentSource="Header"
                                  Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Selected tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="MidnightBlue"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="MidnightBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- Hover on inactive -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#FFEEEEEE"/>
                            </Trigger>

                            <!-- Hover on active tab -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="TabBorder" Property="Background" Value="#191970"/>
                            </MultiTrigger>

                            <!-- Inactive tab -->
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="TabBorder" Property="Background" Value="#FFCBCBCB"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1" Background="#FFF9F9F9" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="#FFCBCBCB" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Margin="26,0,0,0" VerticalAlignment="Center" Click="Button_Click"
                            FontSize="14" Foreground="#FF05005F" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="DemiBold" Height="55" Width="56">
                        <Image Height="45" Width="47" Source="/Screenshot 2025-10-15 174220.png"/>
                    </Button>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0">
                        <Label Content="Medicine Request" FontSize="16" FontWeight="DemiBold" Foreground="#FF001544" Padding="0,0,0,0" Height="25"/>
                        <Label Content="Use this form to request medicine and view history." Foreground="#FF8A8A8A" Padding="0,0,0,0" Height="25"/>
                    </StackPanel>
                </Grid>
            </Border>

            <TabControl Grid.Row="1" Margin="20" BorderBrush="{x:Null}" Background="{x:Null}" TabStripPlacement="Top">

                <TabItem Header="💊 Request Medicine" BorderBrush="{x:Null}">
                    <Border BorderBrush="#FFD7D7D7" BorderThickness="1" CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Margin="40,15" CornerRadius="8" Background="#FFF3F3F3">
                                <Border Margin="20,0" Height="32" VerticalAlignment="Center" CornerRadius="5" Background="White">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" Margin="5" Width="22" HorizontalAlignment="Left" Source="/Screenshot 2025-10-07 221555.png"/>
                                        <TextBox x:Name="txtSearch" Grid.Column="1" Margin="5,0" TextWrapping="Wrap" FontSize="13" Foreground="#FF8F8F8F" VerticalContentAlignment="Center" Text="Search medicines..." BorderThickness="0" BorderBrush="Transparent" Background="White" GotFocus="TextBox_GotFocus" LostFocus="txtSearch_LostFocus" TextChanged="TextBox_TextChanged" FocusVisualStyle="{x:Null}" />
                                    </Grid>
                                </Border>
                            </Border>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                                <UniformGrid x:Name="StackPanelMedicines" Columns="2" HorizontalAlignment="Stretch" />
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </TabItem>

                <TabItem Header="📜 Request History" BorderBrush="{x:Null}">
                    <Border BorderBrush="Silver" BorderThickness="1" CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="40,20,40,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="📜" Grid.Column="0" FontSize="30" Foreground="#FF001B56" VerticalAlignment="Top" Padding="0"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <Label Content="Request History" FontSize="15" FontWeight="DemiBold" Foreground="#FF001B61" Padding="0,0,0,0" Height="25"/>
                                    <Label Content="View all your previous medicine requests" Foreground="#FF8F8F8F" Padding="0,0,0,0" Height="25"/>
                                </StackPanel>
                            </Grid>

                            <ScrollViewer x:Name="sdsadada" Grid.Row="1" Margin="40,0,10,0" HorizontalContentAlignment="Center">
                                <StackPanel x:Name="StackPanelMedicineRequests"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>