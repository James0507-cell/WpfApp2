<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WpfApp2.AdminWindow"
        mc:Ignorable="d"
        Title="AdminWindow" Height="744" Width="852" Background="{x:Null}">
    <Border BorderThickness="1" Background="White" CornerRadius="20,20,20,20">
        <Grid Margin="-1,9,-1,-9">
            <Grid.RowDefinitions>
                <RowDefinition Height="71"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="0,0,0,1" RenderTransformOrigin="0.5,0.5" Margin="-14,-1,7,20">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.225"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <Label Margin="644,1,24,17" FontSize="20" Foreground="#FF00104D" FontWeight="SemiBold"/>
            </Border>
            <Label Content="Welcome Back!, Admin" HorizontalAlignment="Left" Margin="64,0,0,0" VerticalAlignment="Center" FontSize="8" Foreground="#FF797979" Height="22" Width="91"/>
            <Image HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="49" Source="/mcm logo.png" RenderTransformOrigin="1.025,-0.28" Margin="20,2,0,0"/>
            <Button Content="Log out" HorizontalAlignment="Left" Margin="709,10,0,0" VerticalAlignment="Top" Height="20" Width="72" Click="Button_Click">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <TabControl Margin="40,54,40,53" BorderBrush="{x:Null}">
                    <TabItem Header="TabItem" BorderBrush="{x:Null}" Background="{x:Null}"/>
                    <TabItem Header="TabItem" Margin="178,-4,-182,2" BorderBrush="{x:Null}" Background="{x:Null}"/>
                </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>