<Window x:Class="WpfApp2.ShortCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="BMI Health Tracker"
        Loaded="Window_Loaded"
        Background="Black"
        MinHeight="600" MinWidth="700" 
        Height="726" Width="875">

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowDepth1" ShadowDepth="2" Opacity="0.5" Direction="270" Color="#CCCCCC" BlurRadius="10"/>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Padding="{TemplateBinding Padding}" x:Name="Border" CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}">
                            <ScrollViewer VerticalScrollBarVisibility="Hidden" x:Name="PART_ContentHost" 
                                          HorizontalScrollBarVisibility="Hidden" Focusable="False"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" TargetName="Border" Value="#C0C0C0"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" TargetName="Border" Value="#F88379"/>
                                <Setter Property="BorderThickness" TargetName="Border" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#F88379"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="8" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E87369"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D86359"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BmiCategoryTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style x:Key="BmiRangeTextStyle" BasedOn="{StaticResource BmiCategoryTextStyle}" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </Window.Resources>

    <Border HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            CornerRadius="15" 
            BorderThickness="1" 
            BorderBrush="#DDDDDD" 
            Background="#FFF9F9F9">

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="67"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border BorderBrush="#FFCECECE" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnBack" Grid.Column="0" Width="49" VerticalAlignment="Center" Margin="10,0,0,0" Height="46" HorizontalAlignment="Left" 
                                Click="Button_Click_1" BorderBrush="Transparent" BorderThickness="0" Background="{x:Null}" Style="{x:Null}">
                            <Image Height="44" Width="49" Source="/Screenshot 2025-10-15 174220.png"/>
                        </Button>

                        <StackPanel Grid.Column="1" Margin="10,10,0,0" VerticalAlignment="Top">
                            <Label FontSize="16" FontWeight="SemiBold" Foreground="#FF00104D" Content="Short Check" Padding="0"/>
                            <Label Content="Use this for the record you height weight and BMI." Foreground="#FF8A8A8A" Padding="0,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Margin="20" HorizontalAlignment="Center" MaxWidth="1000">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Padding="25" 
                        Effect="{StaticResource ShadowDepth1}" 
                        CornerRadius="10" 
                        BorderThickness="1" 
                        BorderBrush="#E0E0E0" 
                        Background="White" Margin="0,0,0,181">
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="Record Your Measurements" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                        <TextBlock Text="Enter your current height and weight to track your health metrics." Margin="0,5,0,20" FontSize="14" Foreground="#797979"/>

                        <TextBlock Text="Height (cm)" Height="20" FontSize="14" FontWeight="SemiBold"/>
                        <TextBox d:Text="e.g., 175" TextChanged="HeightTextBox_TextChanged" 
                                 PreviewTextInput="NumberValidationTextBox" x:Name="HeightTextBox" Height="54"/>

                        <TextBlock Text="Weight (kg)" Margin="0,0,0,5" FontSize="14" FontWeight="SemiBold"/>
                        <TextBox d:Text="e.g., 70" TextChanged="WeightTextBox_TextChanged" 
                                 PreviewTextInput="NumberValidationTextBox" x:Name="WeightTextBox" Height="53"/>

                        <Button x:Name="CalculateButton" Content="Calculate BMI" Click="CalculateButton_Click" Background="#FFFF1400" Height="40" Width="Auto"/>

                    </StackPanel>
                </Border>

                <Border Grid.Column="1" 
                        Padding="25" 
                        Effect="{StaticResource ShadowDepth1}" 
                        CornerRadius="10" 
                        BorderThickness="1" 
                        BorderBrush="#E0E0E0" 
                        Background="White" Grid.ColumnSpan="2" Margin="40,0,0,181">
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="BMI Categories" Margin="0,0,0,10" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>

                        <Grid VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Your BMI: N/A" x:Name="BmiResultTextBlock" Margin="0,0,0,15" Height="30" 
                                       HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Foreground="#555555"/>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0">
                                    <TextBlock Foreground="Blue" Style="{StaticResource BmiCategoryTextStyle}" Text="Underweight"/>
                                    <TextBlock Foreground="Green" Style="{StaticResource BmiCategoryTextStyle}" Text="Normal weight"/>
                                    <TextBlock Foreground="Orange" Style="{StaticResource BmiCategoryTextStyle}" Text="Overweight"/>
                                    <TextBlock Text="Obese" Style="{StaticResource BmiCategoryTextStyle}" Foreground="Red"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="30, 0, 0, 0">
                                    <TextBlock Foreground="Blue" Style="{StaticResource BmiRangeTextStyle}" Text="&lt; 18.5"/>
                                    <TextBlock Foreground="Green" Style="{StaticResource BmiRangeTextStyle}" Text="18.5 - 24.9"/>
                                    <TextBlock Foreground="Orange" Style="{StaticResource BmiRangeTextStyle}" Text="25.0 - 29.9"/>
                                    <TextBlock Foreground="Red" Style="{StaticResource BmiRangeTextStyle}" Text="&gt;= 30.0"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>