<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WpfApp2.UserForm"
    mc:Ignorable="d"
    Title="UserForm" Height="744" Width="852" Background="{x:Null}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Border BorderThickness="1" Background="#FFF9F9F9" CornerRadius="15">
        <Grid Margin="1,1,0,0">
            <Grid.FocusVisualStyle>
                <Style/>
            </Grid.FocusVisualStyle>

            <Grid.RowDefinitions>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="73*"/>
                <RowDefinition Height="371*"/>
                <RowDefinition Height="195*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="2" Focusable="True" Margin="0,2,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="279*"/>
                    <ColumnDefinition Width="287*"/>
                    <ColumnDefinition Width="11*"/>
                    <ColumnDefinition Width="272*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="___No_Name_"
        BorderThickness="0.2"
        Margin="25,10,15,0"
        CornerRadius="8"
        BorderBrush="Black"
        Background="#FFFDFDFD"
        IsMouseDirectlyOverChanged="___No_Name__IsMouseDirectlyOverChanged">

                    <Button x:Name="btnAppoint"
        Background="{x:Null}"
        BorderBrush="{x:Null}"
        ClipToBounds="True"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        Click="btnAppoint_Click" Margin="0,1,0,-1">

                        <Grid Width="221" Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="49*" />
                                <!-- Column 0 -->
                                <ColumnDefinition Width="131*" />
                                <!-- Column 1 -->
                                <ColumnDefinition Width="41*" />
                                <!-- Column 2 -->
                            </Grid.ColumnDefinitions>

                            <!-- Column borders for debugging -->
                            <!--<Border Grid.Column="0" BorderBrush="Red" BorderThickness="1"/>-->
                            <!--<Border Grid.Column="1" BorderBrush="Green" BorderThickness="1"/>-->
                            <!--<Border Grid.Column="2" BorderBrush="Blue" BorderThickness="1"/>-->

                            <!-- Centered image inside middle column -->
                            <Image
               Source="/Screenshot 2025-10-09 193545.png"
               Width="40"
               Height="40"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" Margin="0,3,0,0"/>
                            <Label Content="Book Appointment" HorizontalAlignment="Left" Margin="0,7,0,0" VerticalAlignment="Top" Width="108" FontWeight="DemiBold" Foreground="#FF00175E" Height="25" FontSize="10" Grid.Column="1"/>
                            <Label Content="Schedule a visit with your doctor" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="8" Height="22" Foreground="#FFB5B5B5" Width="125" Background="{x:Null}" Grid.Column="1"/>
                            <Label Grid.Column="2" Content="✚" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="20" Margin="0,10,0,0"/>
                        </Grid>
                    </Button>


                </Border>

                <Border BorderBrush="Black"
        BorderThickness="0.2"
        Grid.Column="1"
        Margin="25,10,22,0"
        CornerRadius="8"
        Background="White">

                    <Button x:Name="btnSample"
            Width="240"
            Height="48"
            Click="Button_Click_2"
            BorderBrush="{x:Null}"
            Background="{x:Null}"
            UseLayoutRounding="True"
            RenderTransformOrigin="0.5,0.5"
            RenderOptions.BitmapScalingMode="HighQuality"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">

                        <!-- Centered Grid inside the Button -->
                        <Grid Width="233" Height="41"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25*" />
                                <ColumnDefinition Width="53*" />
                                <ColumnDefinition Width="16*" />
                            </Grid.ColumnDefinitions>
                            <Image HorizontalAlignment="Center" Height="38" VerticalAlignment="Top" Width="48" Source="/Screenshot 2025-10-09 205206.png"/>
                            <Label Content="Short Check" HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="100" FontSize="10" FontWeight="DemiBold" Foreground="#FF00244A"/>
                            <Label Grid.Column="1" Content="Record height and weight" HorizontalAlignment="Left" Margin="0,14,0,0" VerticalAlignment="Top" Height="24" Width="102" FontSize="8" Foreground="#FFB2B2B2"/>
                            <Label Grid.Column="2" Content="✚" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Width="20" Margin="0,6,0,0"/>

                            <!-- Optional placeholders -->
                            <!--<Image Grid.Column="0" Source="your_icon.png" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
                            <!--<TextBlock Grid.Column="1" Text="Label" VerticalAlignment="Center" HorizontalAlignment="Center"/>-->
                            <!--<TextBlock Grid.Column="2" Text="➕" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>-->
                        </Grid>
                    </Button>
                </Border>

                <Border BorderBrush="Black"
        BorderThickness="0.2"
        Grid.Column="3"
        Margin="10,10,27,0"
        CornerRadius="8"
        Background="White">
                    <Button x:Name="btnBorder3"
            Width="240"
            Height="46"
            BorderBrush="{x:Null}"
            Background="{x:Null}"
            UseLayoutRounding="True"
            RenderOptions.BitmapScalingMode="HighQuality"
            Click="Button_Click"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">
                        <Grid Width="235" Height="40"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="64*" />
                                <ColumnDefinition Width="111*" />
                                <ColumnDefinition Width="60*" />
                            </Grid.ColumnDefinitions>
                            <Image HorizontalAlignment="Center" Height="37" VerticalAlignment="Top" Width="52" Source="/Screenshot 2025-10-09 211031.png"/>
                            <Label Content="Request Medicine" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="10" FontWeight="DemiBold" Foreground="#FF00235B" Height="24" Width="91" Margin="59,2,0,0" Grid.ColumnSpan="2"/>
                            <Label Content="Request Available medicine" HorizontalAlignment="Left" Margin="60,16,0,0" VerticalAlignment="Top" Foreground="#FFC8C8C8" FontSize="8" Height="21" Width="96" Grid.ColumnSpan="2"/>
                            <Label Grid.Column="2" Content="✚" HorizontalAlignment="Left" Margin="26,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.582,-0.062"/>
                        </Grid>
                    </Button>
                </Border>

            </Grid>

            <Border BorderBrush="#FF9E9E9E" BorderThickness="0.5" Grid.Row="3" Margin="25,18,434,6" CornerRadius="15,15,15,15" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="37"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="32"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Appointments" FontWeight="Bold" FontSize="14" Margin="10,5,17,15" Foreground="#FF00104D"/>
                    <Border Grid.Row="0" BorderBrush="#FFBABABA" BorderThickness="0,0,0,1" Margin="0,35,0,0"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0">
                        <StackPanel x:Name="AppointmentStackPanel" HorizontalAlignment="Stretch"/>
                    </ScrollViewer>

                    <Border BorderBrush="Black" BorderThickness="1" Margin="96,5,97,5" Grid.Row="2" CornerRadius="5,5,5,5" Background="#FF00104D">
                        <Button Content="Book Appointment" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="DemiBold" Foreground="White" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>


            <Border BorderBrush="#FF9E9E9E" BorderThickness="0.5" Grid.Row="3" Margin="429,18,27,6" CornerRadius="15,15,15,15" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="28"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Recent Activities" FontWeight="Bold" FontSize="14" Margin="10,5,17,15" Foreground="#FF00104D" VerticalAlignment="Top"/>
                    <Border Grid.Row="0" BorderBrush="#FFBABABA" BorderThickness="0,0,0,1" Margin="0,35,0,0"/>

                    <ScrollViewer Grid.Row="1" Margin="0">
                        <StackPanel x:Name="StackPanelActivities"/>
                    </ScrollViewer>

                </Grid>
            </Border>

            <Border BorderBrush="#FFCCCCCC" BorderThickness="1,1,1,1" Grid.Row="4" Margin="25,0,27,0" CornerRadius="10,10,10,10" Background="White" Height="154" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="1" Margin="540,18,24,10" CornerRadius="8" Background="#FFFDD7D7">
                        <Grid>
                            <Image HorizontalAlignment="Center" Height="38" Margin="0,5,0,0" VerticalAlignment="Top" Width="38" Source="/Screenshot 2025-09-10 203147.png" RenderTransformOrigin="0.861,0.455"/>
                            <Label Content="Active Prescription" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" FontSize="7" Foreground="#FF707070" Height="19" Width="66"/>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" Margin="282,18,282,10" CornerRadius="8,8,8,8" Background="#FFB9FFE3">
                        <Grid>
                            <Image HorizontalAlignment="Left" Height="38" Margin="90,5,0,0" VerticalAlignment="Top" Width="37" Source="/Screenshot 2025-09-10 195902.png" RenderTransformOrigin="0.841,-0.093"/>
                            <Label Content="Last Check-up" HorizontalAlignment="Left" Margin="81,48,0,0" VerticalAlignment="Top" Foreground="#FF818181" FontSize="7" Height="19" Width="54"/>
                        </Grid>
                    </Border>
                    <Border BorderThickness="1" Margin="25,18,541,10" CornerRadius="8,8,8,8" Background="#FF9BCDFF">
                        <Grid>
                            <Image HorizontalAlignment="Left" Height="34" Margin="90,10,0,0" VerticalAlignment="Top" Width="32" Source="/Screenshot 2025-09-10 195621.png" RenderTransformOrigin="1.017,0.365"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Border BorderBrush="#FFB1B1B1" BorderThickness="0,0,0,1" Margin="0,0,0,4" CornerRadius="1,1,1,1">
                <Border BorderThickness="0,0,0,1" CornerRadius="5,5,5,5">
                    <Image HorizontalAlignment="Left" Height="51" VerticalAlignment="Center" Width="58" Source="/Logo-Final_noname_1.png" Margin="10,0,0,0"/>
                </Border>
            </Border>
            <Label Content="Student Portal" HorizontalAlignment="Left" Margin="69,0,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FF00104D" Height="36" Width="151"/>
            <Label x:Name="lblName" Content="Welcome back, (First Name)" HorizontalAlignment="Left" Margin="75,25,0,0" VerticalAlignment="Top" FontSize="8" Foreground="#FF797979" Height="21" Width="166"/>
            <Button HorizontalAlignment="Left" Margin="735,0,0,0" VerticalAlignment="Center" Width="64" BorderBrush="{x:Null}" Click="Button_Click_4" Height="27" Background="{x:Null}">
                <Grid Height="23" Width="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition Width="59*"/>
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Center" Height="20" VerticalAlignment="Center" Width="22" Source="/Screenshot 2025-10-11 192925.png"/>
                    <Label Grid.Column="1" Content="Logout" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" FontWeight="DemiBold" Foreground="#FF02214D"/>
                </Grid>
            </Button>
            <Label Content="Latest BMI" HorizontalAlignment="Left" Margin="136,0,0,0" Grid.Row="4" VerticalAlignment="Center" FontSize="7" Foreground="#FF737373" Height="19" Width="42"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="-27,-316,0,0" VerticalAlignment="Top" Height="20" Width="40"/>
            <Label Content="Quick Actions" HorizontalAlignment="Left" Margin="21,0,0,0" VerticalAlignment="Center" FontSize="15" FontWeight="DemiBold" Foreground="#FF000E54" Grid.Row="1"/>

        </Grid>
    </Border>
</Window>