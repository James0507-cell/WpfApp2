<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WpfApp2.UserForm"
    mc:Ignorable="d"
    Title="UserForm" Height="744" Width="852" Background="{x:Null}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border BorderThickness="1" Background="#FFF9F9F9" CornerRadius="15">
        <Grid Margin="1,1,0,0">
            <Grid.FocusVisualStyle>
                <Style/>
            </Grid.FocusVisualStyle>

            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="59"/>
                <RowDefinition/>
                <RowDefinition Height="256.04"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#FFB1B1B1" BorderThickness="0,0,0,1" Grid.Row="0" VerticalAlignment="Top" Height="51">
                <Grid>
                    <Image HorizontalAlignment="Left" Height="51" VerticalAlignment="Center" Width="58" 
           Source="/Logo-Final_noname_1.png" Margin="10,0,0,0"/>

                    <Label Content="Student Portal" HorizontalAlignment="Left" Margin="69,0,0,0" 
           VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FF00104D"/>

                    <Label x:Name="lblName" Content="Welcome back, (First Name)" HorizontalAlignment="Left" 
           Margin="75,25,0,0" VerticalAlignment="Top" FontSize="8" Foreground="#FF797979"/>

                    <Border BorderThickness="1" 
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="0,17,21,0" CornerRadius="10" Background="DarkGray" 
            Width="60" Height="25">
                        <Button Content="Logout" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="60" Height="20" 
                BorderBrush="{x:Null}" Background="{x:Null}" 
                FontSize="8" Foreground="White" 
                FontWeight="DemiBold" Padding="1,0,1,1" 
                Click="Button_Click_4"/>
                    </Border>
                </Grid>

            </Border>

            <Grid Grid.Row="2" Focusable="True" Margin="25,2,25,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="___No_Name_"
            Grid.Column="0"
            BorderThickness="1,1,1,1"
            Margin="0,0,1,0"
            CornerRadius="8"
            Background="#FFFDFDFD"
            IsMouseDirectlyOverChanged="___No_Name__IsMouseDirectlyOverChanged" BorderBrush="#1A00104D">
                    <Button x:Name="btnAppoint"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Click="btnAppoint_Click"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Center"
                Padding="10,0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="/Screenshot 2025-10-15 103607.png" Width="40" Height="40" VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Book Appointment" FontWeight="DemiBold" Foreground="#FF00175E" FontSize="10" Padding="0,0,0,0" VerticalAlignment="Center"/>
                                <Label Grid.Row="1" Content="Schedule a visit with your doctor" FontSize="8" Foreground="#FFB5B5B5" Padding="0,0,0,0" VerticalAlignment="Center"/>
                            </Grid>

                            <Label Grid.Column="2" Content="✚" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                </Border>

                <Border BorderBrush="#1A00104D"
            BorderThickness="1,1,1,1"
            Grid.Column="2"
            CornerRadius="8"
            Background="White" Margin="0,0,1,0">
                    <Button x:Name="btnSample"
                Click="Button_Click_2"
                BorderBrush="{x:Null}"
                Background="{x:Null}"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Center"
                Padding="10,0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="/Screenshot 2025-10-15 102956.png" Width="40" Height="40" VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Short Check" FontSize="10" FontWeight="DemiBold" Foreground="#FF00244A" Padding="0,0,0,0" VerticalAlignment="Center"/>
                                <Label Grid.Row="1" Content="Record height and weight" FontSize="8" Foreground="#FFB2B2B2" Padding="0,0,0,0" VerticalAlignment="Center"/>
                            </Grid>

                            <Label Grid.Column="2" Content="✚" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                </Border>

                <Border BorderBrush="#1A00104D"
            BorderThickness="1,1,1,1"
            Grid.Column="4"
            CornerRadius="8"
            Background="White">
                    <Button x:Name="btnBorder3"
                BorderBrush="{x:Null}"
                Background="{x:Null}"
                Click="Button_Click"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Center"
                Padding="10,0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="/Screenshot 2025-10-15 103827.png" Width="40" Height="40" VerticalAlignment="Center" Margin="0,0,10,0"/>

                            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Request Medicine" FontSize="10" FontWeight="DemiBold" Foreground="#FF00235B" Padding="0,0,0,0" VerticalAlignment="Center"/>
                                <Label Grid.Row="1" Content="Request Available medicine" FontSize="8" Foreground="#FFC8C8C8" Padding="0,0,0,0" VerticalAlignment="Center"/>
                            </Grid>

                            <Label Grid.Column="2" Content="✚" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                </Border>
            </Grid>



            <Grid Grid.Row="3" Margin="25,18,27,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="#1A00104D" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Background="White" Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="Appointments" FontWeight="Medium" FontSize="13" Margin="10,10,17,10" Foreground="#FF00104D" VerticalAlignment="Top"/>
                        <Border Grid.Row="0" BorderBrush="#FFBABABA" BorderThickness="0,0,0,1" Margin="0,35,0,0"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0">
                            <StackPanel x:Name="AppointmentStackPanel" HorizontalAlignment="Stretch"/>
                        </ScrollViewer>

                        <Border BorderBrush="Black" BorderThickness="1" Margin="96,5,97,5" Grid.Row="2" CornerRadius="5" Background="#FF00104D">
                            <Button Content="Book Appointment" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="DemiBold" Foreground="White" VerticalAlignment="Center" VerticalContentAlignment="Center" Click="Button_Click_1" FontSize="10"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Column="2" BorderBrush="#1A00104D" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Background="White" Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="Recent Activities" FontWeight="Medium" FontSize="13" Margin="10,10,17,10" Foreground="#FF00104D" VerticalAlignment="Top"/>
                        <Border Grid.Row="0" BorderBrush="#FFBABABA" BorderThickness="0,0,0,1" Margin="0,35,0,0"/>

                        <ScrollViewer Grid.Row="1" Margin="0" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="StackPanelActivities"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>



            <Grid Grid.Row="4" Margin="25,11,27,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="165"/>
                    <ColumnDefinition Width="13"/>
                    <ColumnDefinition Width="290*"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="329*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="#1A00104D" BorderThickness="1" CornerRadius="10" Background="White" Margin="0,10,0,17">
                    <StackPanel Margin="0">
                        <Border BorderThickness="1" Margin="10,15,10,0" CornerRadius="8" Background="#FFB3D6FF">
                            <Grid Height="48">
                                <Image HorizontalAlignment="Left" Height="34" Margin="4,0,0,0" VerticalAlignment="Center" Width="32" Source="/Screenshot 2025-10-16 180942.png"/>
                                <Label Content="Latest BMI" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="9" Foreground="#FF737373" Padding="5,6,5,0" Margin="36,6,0,0"/>
                                <Label x:Name="lblbmi" Content="20.0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="DemiBold" Padding="5,0,5,8" FontSize="10" Margin="36,0,0,4" RenderTransformOrigin="0.32,0.531"/>
                            </Grid>
                        </Border>
                        <Border BorderThickness="1" Margin="10,7,10,0" CornerRadius="8" Background="#FFB9FFE3">
                            <Grid Height="48">
                                <Image HorizontalAlignment="Left" Height="31" Margin="4,0,0,0" VerticalAlignment="Center" Width="32" Source="/Screenshot 2025-10-16 181635.png"/>
                                <Label Content="Last Check-up" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF818181" FontSize="9" Padding="5,7,5,0" Margin="35,5,0,0"/>
                                <Label x:Name="lblCheck" Content="October 12, 2025" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="DemiBold" Padding="0,0,0,0" FontSize="8" Margin="40,24,0,0"/>
                            </Grid>
                        </Border>
                        <Border BorderThickness="1" Margin="10,7,10,14" CornerRadius="8" Background="#FFFAF0AF">
                            <Grid Height="48">
                                <Image HorizontalAlignment="Left" Height="34" Margin="4,0,0,0" VerticalAlignment="Center" Width="33" Source="/Screenshot 2025-10-16 182255.png"/>
                                <Label Content="Incoming Appointment" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="9" Foreground="#FF818181" Padding="5,5,5,0" Margin="36,3,0,0"/>
                                <Label x:Name="lblIncomingAppointment" Content="October 13, 2025&#xA;8:00 AM" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="DemiBold" Padding="0,0,0,0" FontSize="8" Margin="41,19,0,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" BorderBrush="#1A00104D" BorderThickness="1" CornerRadius="10" Background="White" Margin="5,10,16,17">
                    <Grid>
                        <Label Content="Current Health Status" HorizontalAlignment="Left" Margin="25,2,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="11"/>
                        <Image HorizontalAlignment="Left" Height="14" Margin="9,7,0,0" VerticalAlignment="Top" Width="17" Source="/Screenshot 2025-10-14 193044.png"/>

                        <Border BorderBrush="#FF7BA9FF" BorderThickness="1" Margin="13,31,14,96" CornerRadius="5" Background="#FFB3D6FF">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="11*"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Body Mass Index" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top" FontSize="9" Foreground="#FF737373" Padding="5,0,5,0"/>
                                <Image HorizontalAlignment="Left" Height="19" Margin="4,3,0,0" VerticalAlignment="Top" Width="22" Source="/Screenshot 2025-10-14 200121.png"/>
                                <Label x:Name="lblBMIStatus" Content="20.0" HorizontalAlignment="Left" Margin="22,12,0,0" VerticalAlignment="Top" FontSize="10" FontWeight="DemiBold" Padding="5,0,5,0"/>

                                <Border x:Name="brdStatus" BorderBrush="#FF64906A" BorderThickness="1" HorizontalAlignment="Right" Margin="0,9,10,0" CornerRadius="3" Background="#FFC4FFDD" Height="16" VerticalAlignment="Top" Grid.Column="1" Width="59">
                                    <Label x:Name="lblBMIRange" Content="Normal Range" FontSize="8" Foreground="#FF25531A" Padding="3,1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                </Border>

                                <Label x:Name="lblTargetRange" Content="Target Range: 18.5 -24.9 " HorizontalAlignment="Left" Margin="0,31,0,0" VerticalAlignment="Top" FontSize="8" Padding="5,0,5,0"/>
                                <ProgressBar x:Name="pbBMI" Height="10" Margin="4,44,4,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                            </Grid>
                        </Border>

                        <Grid Margin="13,102,14,21">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Background="#FFF9F9F9" Margin="0,12,0,12">
                                <Grid>
                                    <Ellipse HorizontalAlignment="Left" Height="6" Margin="4,5,0,0" VerticalAlignment="Top" Width="6" Fill="#FF2277FF"/>
                                    <Label Content="Height" HorizontalAlignment="Left" Margin="15,0,0,26" VerticalAlignment="Bottom" FontSize="9" Foreground="#FF737373" Padding="0,0,0,0" Height="16" Width="33"/>
                                    <Label x:Name="lblHeight" Content="168 cm" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" Foreground="#FF001E61" Padding="5,0,5,0"/>
                                </Grid>
                            </Border>

                            <Border Grid.Column="2" BorderBrush="#FFCCCCCC" BorderThickness="1" Background="#FFF9F9F9" CornerRadius="5" Margin="0,12,0,12">
                                <Grid>
                                    <Ellipse HorizontalAlignment="Left" Height="6" Margin="4,5,0,0" VerticalAlignment="Top" Width="6" Fill="#FF29C665"/>
                                    <Label Content="Weight" HorizontalAlignment="Left" Margin="14,1,0,0" VerticalAlignment="Top" FontSize="9" Foreground="#FF737373" Padding="0,0,0,0"/>
                                    <Label x:Name="lblWeight" Content="57 kg" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF001F50" FontWeight="DemiBold" Padding="5,0,5,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Column="4" BorderBrush="#1A00104D" BorderThickness="1" Background="White" CornerRadius="10" Margin="0,10,0,17">
                    <Grid>
                        <!-- Header Row -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MinHeight="29.63"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,5,0,5">
                            <!-- Removed fixed margins for image/label and used a StackPanel -->
                            <Image HorizontalAlignment="Left" Height="14" VerticalAlignment="Top" Width="19" Source="/Screenshot 2025-10-14 194044.png"/>
                            <Label Content="Health Progress" VerticalAlignment="Top" FontSize="11" FontWeight="Medium" Margin="5,0,0,0" Padding="5,0,5,5"/>
                        </StackPanel>

                        <!-- Main Content Area -->
                        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Margin="14,25,15,15" CornerRadius="5" Grid.RowSpan="2">
                            <Grid>
                                <!-- Column Definitions: Key for Horizontal Responsiveness -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Col 0: Month (Fixed width based on content) -->
                                    <ColumnDefinition Width="*" />
                                    <!-- Col 1: Progress Bar (STRETCHES to fill available space) -->
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Col 2: Weight (Fixed width based on content) -->
                                    <ColumnDefinition Width="Auto" />
                                    <!-- Col 3: BMI (Fixed width based on content) -->
                                </Grid.ColumnDefinitions>

                                <!-- Row Definitions: Auto height for each row of data -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 0: Title -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 1: Month 1 -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 2: Month 2 -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 3: Month 3 -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 4: Month 4 -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 5: Month 5 -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Row 6: Month 6 -->
                                </Grid.RowDefinitions>

                                <!-- Row 0: Title -->
                                <Label Content="Weight Trend (Last 6 Months) " Grid.ColumnSpan="4" Grid.Row="0"
                           Margin="10,0,0,5" HorizontalAlignment="Left" FontSize="9" Foreground="#FF001950"/>

                                <!-- Row 1: Month 1 (Jan) -->
                                <Label x:Name="lblMonth1" Content="Jan" Grid.Column="0" Grid.Row="1" Margin="7,0,0,4" HorizontalAlignment="Left" Foreground="#FF737373" FontSize="10" Padding="0" Grid.ColumnSpan="2"/>
                                <ProgressBar x:Name="pbMonth1" Grid.Row="1" Margin="29,3,31,7" Height="10" Grid.ColumnSpan="3"/>
                                <Label x:Name="lblWeight1" Content="50kg" Grid.Column="2" Grid.Row="1" Margin="5,0,5,4" Padding="0" FontSize="10"/>
                                <Label x:Name="lblBmi1" Content="20.0" Grid.Column="3" Grid.Row="1" Margin="5,0,10,4" Foreground="#FF737373" FontSize="8" Padding="0"/>

                                <!-- Row 2: Month 2 (Feb) -->
                                <Label x:Name="lblMonth2" Content="Feb" Grid.Column="0" Grid.Row="2" Margin="6,0,0,4" HorizontalAlignment="Left" Foreground="#FF737373" FontSize="10" Padding="0" Grid.ColumnSpan="2"/>
                                <ProgressBar x:Name="pbMonth2" Grid.Row="2" Margin="29,3,31,7" Height="10" Grid.ColumnSpan="3"/>
                                <Label x:Name="lblWeight2" Content="51kg" Grid.Column="2" Grid.Row="2" Margin="5,0,5,4" Padding="0" FontSize="10"/>
                                <Label x:Name="lblBmi2" Content="20.0" Grid.Column="3" Grid.Row="2" Margin="5,0,10,4" Foreground="#FF737373" FontSize="8" Padding="0"/>

                                <!-- Row 3: Month 3 (Mar) -->
                                <Label x:Name="lblMonth3" Content="Mar" Grid.Column="0" Grid.Row="3" Margin="6,0,0,4" HorizontalAlignment="Left" Foreground="#FF737373" FontSize="10" Padding="0" Grid.ColumnSpan="2"/>
                                <ProgressBar x:Name="pbMonth3" Grid.Row="3" Margin="29,3,31,7" Height="10" Grid.ColumnSpan="3"/>
                                <Label x:Name="lblWeight3" Content="52kg" Grid.Column="2" Grid.Row="3" Margin="5,0,5,4" Padding="0" FontSize="10"/>
                                <Label x:Name="lblBmi3" Content="20.0" Grid.Column="3" Grid.Row="3" Margin="5,0,10,4" Foreground="#FF737373" FontSize="8" Padding="0"/>

                                <!-- Row 4: Month 4 (Apr) -->
                                <Label x:Name="lblMonth4" Content="Apr" Grid.Column="0" Grid.Row="4" Margin="6,0,0,4" HorizontalAlignment="Left" Foreground="#FF737373" FontSize="10" Padding="0" Grid.ColumnSpan="2"/>
                                <ProgressBar x:Name="pbMonth4" Grid.Row="4" Margin="29,3,31,7" Height="10" Grid.ColumnSpan="3"/>
                                <Label x:Name="lblWeight4" Content="53kg" Grid.Column="2" Grid.Row="4" Margin="5,0,5,4" Padding="0" FontSize="10"/>
                                <Label x:Name="lblBmi4" Content="20.0" Grid.Column="3" Grid.Row="4" Margin="5,0,10,4" Foreground="#FF737373" FontSize="8" Padding="0"/>

                                <!-- Row 5: Month 5 (May) -->
                                <Label x:Name="lblMonth5" Content="May" Grid.Column="0" Grid.Row="5" Margin="6,0,0,4" HorizontalAlignment="Left" Foreground="#FF737373" FontSize="10" Padding="0" Grid.ColumnSpan="2"/>
                                <ProgressBar x:Name="pbMonth5" Grid.Row="5" Margin="29,3,31,7" Height="10" Grid.ColumnSpan="3"/>
                                <Label x:Name="lblWeight5" Content="54kg" Grid.Column="2" Grid.Row="5" Margin="5,0,5,4" Padding="0" FontSize="10"/>
                                <Label x:Name="lblBmi5" Content="20.0" Grid.Column="3" Grid.Row="5" Margin="5,0,10,4" Foreground="#FF737373" FontSize="8" Padding="0"/>

                                <!-- Row 6: Month 6 (Jun) -->
                                <Label x:Name="lblMonth6" Content="Jun" Grid.Column="0" Grid.Row="6" Margin="7,0,0,4" HorizontalAlignment="Left" Foreground="#FF737373" FontSize="10" Padding="0" Grid.ColumnSpan="2"/>
                                <ProgressBar x:Name="pbMonth6" Grid.Row="6" Margin="29,3,31,7" Height="10" Grid.ColumnSpan="3"/>
                                <Label x:Name="lblWeight6" Content="55kg" Grid.Column="2" Grid.Row="6" Margin="5,0,5,4" Padding="0" FontSize="10"/>
                                <Label x:Name="lblBmi6" Content="20.0" Grid.Column="3" Grid.Row="6" Margin="5,0,10,4" Foreground="#FF737373" FontSize="8" Padding="0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

            </Grid>

        </Grid>
    </Border>
</Window>