            Background="#F0F0F0"
            BorderBrush="Transparent"
            BorderThickness="1"
            CornerRadius="15">
                            <ContentPresenter x:Name="ContentSite"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          ContentSource="Header"
                          Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Selected tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="MidnightBlue"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="MidnightBlue"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- Hover on inactive -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#FFEEEEEE"/>
                            </Trigger>

                            <!-- Hover on active tab -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="TabBorder" Property="Background" Value="#191970"/>
                            </MultiTrigger>

                            <!-- Inactive tab -->
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="TabBorder" Property="Background" Value="#FFCBCBCB"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


