<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="WpfApp2.StudentManagement"
        mc:Ignorable="d"
        Title="StudentManagement" Height="744" Width="852" Background="{x:Null}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Border BorderThickness="1" CornerRadius="15,15,15,15" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="71*"/>
                <RowDefinition Height="655*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="1" Margin="78,57,78,551" Grid.Row="1" CornerRadius="15,15,15,15"/>
            <Grid>
                <Border BorderBrush="Black" BorderThickness="1"/>
            </Grid>
            <Grid>
                <Button Content="" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center" Width="72" Foreground="{x:Null}" Cursor="Hand" mah:ControlsHelper.FocusBorderBrush="{x:Null}" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/goback.jpg"/>
                    </Button.Background>
                </Button>
                <Image HorizontalAlignment="Left" Height="48" Margin="87,13,0,0" VerticalAlignment="Top" Width="54" Source="/mcm logo.png"/>
                <Label Content="Student Management" HorizontalAlignment="Left" Margin="135,13,0,0" VerticalAlignment="Top" Width="173" Foreground="#FF00104D" FontSize="14" FontWeight="SemiBold"/>
                <Label Content="Manage student accounts and information" HorizontalAlignment="Left" Margin="135,35,0,0" VerticalAlignment="Top" Width="245" Foreground="#FFAFAFAF" Height="26"/>
            </Grid>
            <TabControl Grid.Row="1" Margin="78,67,78,53" BorderBrush="{x:Null}">
                <TabItem Header="Student List" Margin="9,-8,-155,12" BorderBrush="{x:Null}" Background="{x:Null}">
                    <Grid Margin="0,47,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="41*"/>
                        </Grid.RowDefinitions>
                        <Image HorizontalAlignment="Left" Height="21" Margin="13,16,0,0" VerticalAlignment="Top" Width="23" Source="/Screenshot 2025-10-03 114355.png"/>
                        <TextBox x:Name="txtSearch" HorizontalAlignment="Left"
         Margin="43,0,0,0"
         TextWrapping="Wrap"
         VerticalAlignment="Center"
         Width="193" Height="28" TextChanged="txtSearch_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Border Background="White"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="5"
                                Padding="5">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Image HorizontalAlignment="Left" Height="24" Margin="244,0,0,0" VerticalAlignment="Center" Width="27" Source="/Screenshot 2025-10-03 114755.png"/>
                        <ComboBox HorizontalAlignment="Left"
          Margin="278,0,0,0"
          VerticalAlignment="Center"
          Width="120" Height="28">
                            <ComboBox.Style>
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="Transparent">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                                <Border x:Name="Border"
                                                Background="White"
                                                BorderBrush="Gray"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                                    <Grid>
                                                                        <ContentPresenter />
                                                                        <Path x:Name="Arrow"
                                                      HorizontalAlignment="Right"
                                                      Margin="0,0,6,0"
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="Black"/>
                                                                    </Grid>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>
                                                    <ContentPresenter Margin="6,2,25,2"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"/>
                                                    <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False">
                                                        <Border Background="White"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                                            <ScrollViewer Margin="4,6,4,6"
                                                  SnapsToDevicePixels="True">
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                        <Button Content="" HorizontalAlignment="Left" Margin="531,0,0,0" VerticalAlignment="Center" Width="147" Height="51" BorderBrush="{x:Null}" Click="Button_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="/Screenshot 2025-10-03 115810.png" Stretch="Uniform"/>
                            </Button.Background>
                        </Button>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="StudentListPanel" Margin="10"/>
                        </ScrollViewer>

                    </Grid>
                </TabItem>
                <TabItem Header="Analytics" BorderBrush="{x:Null}" Background="{x:Null}" Margin="188,-9,-365,11">
                    <Grid/>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
